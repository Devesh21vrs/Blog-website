}

.btn-success:hover {
    background-color: #5A9BD4; /* Lighter Steel Blue */
}
    </style>
</head>
<body>
    <div class="container">
        <h1 class="mb-4">Edit Article</h1>
        <form action="/articles/<%=article.id %>?_method=PUT" method="POST">
            <%- include('form_field') %>
        </form>
    </div>
</body>
