}.container {
    background-color: #1C1C1C; /* Soft Black */
    padding: 20px;
    border-radius: 8px;
}

h1 {
    color: #D3D3D3; /* Light Gray */
}

form label, form input, form textarea {
    color: #F5F5F5; /* Off-White */
